<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@100;400;500;700&family=Lobster&family=Lobster+Two:wght@400;700&family=Pacifico&family=Rubik:wght@300;400;500;600;700&display=swap'
      rel='stylesheet'
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700&family=Roboto:wght@100;300;400;700&display=swap'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/loginStyle.css' />
    <link rel='stylesheet' href='/stylesheets/mainStyle.css' />
    <link rel='stylesheet' href='/stylesheets/profileStyle.css' />
    <link rel='stylesheet' href='/stylesheets/tourDetailsStyle.css' />
    <title>IronTours</title>
    <script
      src='https://use.fontawesome.com/releases/v5.15.4/js/all.js'
      data-auto-replace-svg='nest'
    ></script>
  </head>
  <body>
    <header>
      <section class='navbar-fixed'>
        <div class='nav-flex'>
          <div class='logo'>
            <a href='/'><img
                class='logo-img'
                src='/images/logo.png'
                alt=''
              /></a>
          </div>
          <a href='#' class='dropdown-button'>
            <i class='fas fa-bars'></i>
          </a>
          <nav class='primary-nav'>
            <ul class='nav-list'>
              <li><a href='/'>Home</a></li>
              {{#if isLoggedIn}}
                {{! <li><a href='/profile'>Profile</a></li> }}
                <li><a href='/logout'>Log Out</a></li>
                <li><a href='/profile'><img
                      src={{userImage}}
                      alt='profile image'
                      class='main-profile-image'
                    /></a></li>
              {{else}}
                <li><a href='/login'>Login</a></li>
                <li><a href='/signup'>Signup</a></li>
              {{/if}}
              {{! <li><a href="/logout">Logout</a></li> }}
            </ul>
          </nav>
        </div>
        <div class='dropdown-menu hidden'>
          <ul>
            <li><a href='/'>Home</a></li>
            {{#if isLoggedIn}}
              <li><a href='/profile'>Profile</a></li>
              <li><a href='/logout'>Log Out</a></li>
            {{else}}
              <li><a href='/login'>Login</a></li>
              <li><a href='/signup'>Signup</a></li>
            {{/if}}

            {{! <li><a href="/logout">Logout</a></li> }}
          </ul>
        </div>
      </section>
    </header>
    <div class='padding-top-nav'></div>
    {{! nav }}
    {{{body}}}
  </body>
  <script src='/javascripts/script.js'></script>
</html>